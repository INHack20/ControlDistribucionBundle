{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}
{% block titulo %}
    Ah Ocurrido un error: {{ status_text }}
{% endblock %}
{% block contenido %}
    <div id="error403">
        <br>
            <h1>Ha ocurrido un error.</h1>
        <br/><br/><br/>
        <div id="cajaImagen">
            <img style="width: 130px; height: 96px; padding-right: 5px; " alt="" src="{{ asset('bundles/inhack20controldistribucion/images/403error.jpg') }}">
        </div>
        <div id="cajaText">
            <font color="red" size="6px" >Lo siento {{ app.user.username }} usted no tiene los privilegios suficientes para acceder a este recurso.</font>
            <br/><br/>
            ({{ app.request.uri }})
        </div>
    <br/>
    
        <div id="cajaEstatus">
            <h2 align="right" >El Servidor Ha Retornado "{{ status_code }} {{ status_text }}".</h2>
        </div>
        <br/><br/>
    </div>
       
    
    <style>
        #cajaText{
            width: 80%;
            float: left;
            margin: 0 auto;
            padding-top: 25px;
        }
        #cajaImagen {
            width: 19%;
            float: left;
            margin: 0 auto;
        }
        #cajaEstatus{
            float: right;
            position: absolute;
            bottom: 0;
            clear: both;
            margin-left: 35%;
        }
        #error403 {
            padding: 10px;
            min-height: 340px;
            background-color: #ffffff;
            border: 2px solid #999999;
            -moz-box-shadow: 0px 0px 20px #000000;
            -webkit-box-shadow: 0px 0px 20px #000000;
            box-shadow: 0px 0px 20px #000000;
            /*IE 7 AND 8 DO NOT SUPPORT BLUR PROPERTY OF SHADOWS*/
        }
            
    </style>
{% endblock %}