{% form_theme formBuscar 'INHack20ControlDistribucionBundle:Form:fields.html.twig' %}
<form id="formBuscar" action="" method="post" {{ form_enctype(formBuscar) }}>
        <div style="min-height: 100px;"> 
            <table style="text-align: left;" border="1" cellpadding="2"
                        cellspacing="2">
                <tbody>
            {{ form_row(formBuscar.tipobusqueda) }}
            {{ form_row(formBuscar.fecha) }}
            {{ form_row(formBuscar.tribunal, { 'class' : '1' }) }}
            {{ form_row(formBuscar.tribunaltipo, { 'class' : '2' }) }}
            {{ form_row(formBuscar.causa, { 'class' : '3' }) }}
            {{ form_rest(formBuscar) }}    
                    </tbody></table>
        </div>
        
            <br/>
            <p align="right">
            <button id="btnBuscar" class="miBoton">
                <img src="" width="16" height="16" alt="" />
                Buscar</button>
            </p>        
</form>
<script type="text/javascript">
        $(document).ready(function(){
                    var options = { 
                        target:        '#result-busqueda',   // target element(s) to be updated with server response 
                        //beforeSubmit:  cargando,  // pre-submit callback 
                        //success:       listoCargado  // post-submit callback 
                    }; 
                    $("#formBuscar").ajaxForm(options);
                    function ocultar(){
                        $(".busqueda").hide(0);
                    }
                    function limpiar(){
                        $(".busqueda input").attr("value","");
                        $(".busqueda select").attr("value","");
                    }
                    $("#form_tipobusqueda").change(function(){
                        
                        limpiar();
                        ocultar();
                        if($(this).val()!="")
                            {
                                $("."+$(this).val()).show(500);
                            }                
                    });
                    $("#form_tipobusqueda").attr("value","");
                    //$(".busqueda").hide();
            
            //Campos del formulario
            $("#form_fecha").datepicker();
        });
    </script>
    <style type="text/css">
            table#form tbody th, tbody td {
                text-align: left;
               }
    </style>