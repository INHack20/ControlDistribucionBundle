{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}

{% block contenido %}
    <h1>Causa</h1>
    <br/><br/>
    <table class="tableCSS" style="width: auto">
        <thead>
            <tr>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            <tr class="odd">
                <td>Id</td>
                <td>{{ entity.id }}</td>
            </tr>
            <tr class="even">
                <td>Nombre</td>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr class="odd">
                <td>Tribunal</td>
                <td>{{ entity.tribunaltipo.nombre }}</td>
            </tr>
        </tbody>
        <thead>
            <tr>
                <td></td>
                <td></td>
            </tr>
        </thead>
    </table>
    <br/><br/>
    <table>
        <tr>
            <td>
                <a href="{{ path('causa_edit',{'id' : entity.id }) }}">
                    <button class="css3button">
                        <img src="{{ asset('bundles/inhack20controldistribucion/images/editar.png') }}" width="16" height="16" alt="" />
                        Editar
                    </button>
                </a>
                    &nbsp;&nbsp;&nbsp;
            </td>
            <td>
                <form action="{{ path('causa_delete', { 'id': entity.id }) }}" method="post">
                        <button class="css3button">
                            <img src="{{ asset('bundles/inhack20controldistribucion/images/eliminar.png') }}" width="16" height="16" alt="" />
                            Eliminar
                        </button>
                     {{ form_widget(delete_form) }}
                </form>
            </td>
            <td>&nbsp;&nbsp;&nbsp;</td>
        </tr>
    </table>
{% endblock %}