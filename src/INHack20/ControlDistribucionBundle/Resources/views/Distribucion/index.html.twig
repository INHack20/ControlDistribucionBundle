{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}

{% block contenido %}
    <h1>Distribucion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tribunal</th>
                <th>Causa</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('distribucion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tribunal.descripcion }}</td>
                <td>{{ entity.causa.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('distribucion_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('distribucion_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('distribucion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}