{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}

{% block contenido %}
    <h1>Editar Grupo</h1>

    <form action="{{ path('grupo_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(Editar_form) }}>
        {{ form_widget(Editar_form) }}
        <p>
            <button type="submit">Editar</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('grupo') }}">
                Regresar a la Lista
            </a>
        </li>
        <li>
            <form action="{{ path('grupo_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Eliminar</button>
            </form>
        </li>
    </ul>
{% endblock %}