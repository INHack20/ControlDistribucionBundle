{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}

{% block contenido %}
    <h1>Editar Horario</h1>
    <br/><br/>
    <fieldset>
         <legend>Datos</legend>
         <br/>
            Los dias deben ser ingresados en el siguiente formato:<br/>LUN,MAR,MIE,JUE,VIE,SAB,DOM<br/><br/>
            Se puede crear diferentes combinaciones:<br/>
            <b>LUN-JUE,SAB (Luneas a Jueves y Sabado)<br/>
            LUN,MIE,VIE (Lunes, Miercoles y Viernes)<br/>
            LUN,MIE-SAB (Lunes, Miercoles a Sabado)</b>
            <br/><br/>
    <form action="{{ path('horario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
                <br/><br/>
                <p align="center">
                    <button type="submit" class="css3button">
                        <img src="{{ asset('bundles/inhack20controldistribucion/images/guardar.png') }}" width="16" height="16" alt="" />
                        Guardar Cambios</button>
                </p>
            </form>
            <form action="{{ path('horario_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                    <button type="submit" class="css3button" style="float: right;">
                    <img src="{{ asset('bundles/inhack20controldistribucion/images/eliminar.png') }}" width="16" height="16" alt="" />                        
                    Eliminar</button>
            </form>
    </fieldset>   
{% endblock %}