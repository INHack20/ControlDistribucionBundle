{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}

{% block contenido %}
    <h1>Lista de Horario(s)</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dias</th>
                <th>Hora de Inicio</th>
                <th>Hora de Cierre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('horario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dias }}</td>
                <td>{% if entity.horaInicio %}{{ entity.horaInicio|date('h:i a') }}{% endif %}</td>
                <td>{% if entity.horaFin %}{{ entity.horaFin|date('h:i a') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('horario_show', { 'id': entity.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('horario_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('horario_new') }}">
                Registrar
            </a>
        </li>
    </ul>
{% endblock %}