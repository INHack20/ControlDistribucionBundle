{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}

{% block contenido %}
    <h1>Lista de Horario(s)</h1>
    <br/><br/>
    <table class="tableCSS">
        <thead>
            <tr>
                <th>N&deg;</th>
                <th>Dias</th>
                <th>Hora de Inicio</th>
                <th>Hora de Cierre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="{% if loop.index % 2 == 0 %}even{% else %}odd{% endif %}">
                <td>{{ loop.index }}</td>
                <td>{{ entity.dias }}</td>
                <td>{% if entity.horaInicio %}{{ entity.horaInicio|date('h:i a') }}{% endif %}</td>
                <td>{% if entity.horaFin %}{{ entity.horaFin|date('h:i a') }}{% endif %}</td>
                <td>
                    <a href="{{ path('horario_show', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/inhack20controldistribucion/images/ver.png') }}" width="24" height="24" alt="" />
                    </a>
                    <a href="{{ path('horario_edit', { 'id': entity.id }) }}">
                        <img src="{{ asset('bundles/inhack20controldistribucion/images/editar.png') }}" width="24" height="24" alt="" />
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br/><br/>
    <p align="right">
                <a href="{{ path('horario_new') }}"><button id="btnBuscar" class="css3button" style="min-width: 10px">
                <img src="{{ asset('bundles/inhack20controldistribucion/images/registrar.png') }}" width="16" height="16" alt="" />
                Registrar</button></a>
    </p>
{% endblock %}