{% extends 'INHack20ControlDistribucionBundle:Principal:index.html.twig' %}

{% block contenido %}
    <h1>Lista de Tribunal(es)</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nro</th>
                <th>Â¿Hay Despacho?</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tribunal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>Tribunal {{ entity.nro }} De {{ entity.tribunaltipo.nombre }}</td>
                <td>
                    {% if entity.isdespacho %}
                        <font color="green">SI</font>
                    {% else %}
                        <font color="red">NO</font>
                    {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tribunal_show', { 'id': entity.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('tribunal_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tribunal_new') }}">
                Registrar
            </a>
        </li>
    </ul>
{% endblock %}